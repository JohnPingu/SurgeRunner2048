<Window x:Class="MaelKiller.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaelKiller"
        mc:Ignorable="d"
        Title="Menu" Height="800" Width="1200">
    <Canvas>
        <Rectangle Height="784" Stroke="Black" Width="1200" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/ressources/img/Menu/MENU.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <ComboBox x:Name="cbChoixDifficulte" Height="30" Width="150" Canvas.Left="525" Canvas.Top="627" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ComboBoxItem x:Name="cbiDiffNormale" IsSelected="True" Content="Normale"/>
            <ComboBoxItem x:Name="cbiDiffExtreme" Content="Extrême"/>
        </ComboBox>
        <Button Content="Button" Height="106" Canvas.Left="473" Canvas.Top="462" Width="251" Background="{x:Null}" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click"/>
    </Canvas>
</Window>
